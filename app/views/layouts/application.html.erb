<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramFinal</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>

      <nav>
      <ul>

          <li>
          <a href="/users"> All users</a>
          </li>

          <li>
            <a href="/photos">All public photos</a>
          </li>

          <li>
            <a href="/user_sign_in">Sign in</a>
          </li>

        <li>
            <a href="/user_sign_up">Sign up</a>
        </li>

        <li>
          <%= session.fetch(:user_id) %>
        </li>
        
      </ul>
    </nav>

      <% if notice.present? %>
        <div class="alert alert-success" role="alert">
        <%= notice %>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="alert alert-warning" role="alert">
        <%= alert %>
        </div>
    <% end %>


    <%= yield %>
  </body>
</html>
